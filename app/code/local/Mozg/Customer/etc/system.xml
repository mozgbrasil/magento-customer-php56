<config>
    <sections>
        <customer translate="label">
            <groups>
                <mozg_customer translate="label" module="mozg_customer"> 
                    <label>Cadastro de Clientes - (powered by MOZG)</label>
                    <sort_order>620</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <frontend_model>mozg_base/adminhtml_system_config_fieldset_method</frontend_model>
                    <activity_path>customer/mozg_customer/active_customer_forms</activity_path>
                    <comment>
                          <![CDATA[<div style="padding:10px;background-color:#fff;border:1px solid #ddd;margin-bottom:7px;"><p><a href="https://github.com/mozgbrasil/magento-customer-php56#mozgcustomer" target="_blank">Clique aqui</a> para obter as informações do módulo</p></div>]]>
                    </comment>                  
                    <fields>

                        <mozg_customer_license type="group" translate="label comment tooltip" module="mozg_customer">
                            <label>Licenciamento</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>10</sort_order>
                            <frontend_model>mozg_base/adminhtml_system_config_fieldset_expanded</frontend_model>
                            <fields>
                                <!--<data_modulo translate="label">
                                    <label>Data Compilação</label>
                                    <comment></comment>
                                    <folder_id>customer</folder_id>
                                    <frontend_type>text</frontend_type>
                                    <frontend_model>mozg_base/adminhtml_system_config_form_field_moduledate</frontend_model>
                                    <sort_order>7</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </data_modulo>-->
                                <license translate="label">
                                    <label>Licença para uso comercial</label>
                                    <comment></comment>
                                    <frontend_type>textarea</frontend_type>
                                    <config_path>customer/mozg_customer/license</config_path>
                                    <sort_order>8</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </license>
                                <license_output translate="label">
                                    <label></label>
                                    <comment></comment>
                                    <license_config_path>customer/mozg_customer/license</license_config_path>
                                    <method_id>mozg_customer</method_id>
                                    <frontend_type>text</frontend_type>
                                    <frontend_model>mozg_base/adminhtml_system_config_form_field_license</frontend_model>
                                    <sort_order>9</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </license_output>
                            </fields>
                        </mozg_customer_license>
                        <mozg_customer_required_settings type="group" translate="label comment tooltip" module="mozg_customer">
                            <label>Required Settings</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>20</sort_order>
                            <frontend_model>mozg_base/adminhtml_system_config_fieldset_expanded</frontend_model>
                            <fields>
                                <active_customer_forms translate="label,comment">
                                    <label>Ativar suporte aos formulários</label>
                                    <comment><![CDATA[<a href="https://github.com/mozgbrasil/magento-customer-php56/blob/master/README.md#-ativar-suporte-aos-formularios" target="_blank">__?__</a>]]></comment>
                                    <frontend_type>select</frontend_type>
                                    <source_model>adminhtml/system_config_source_yesno</source_model>
                                    <config_path>customer/mozg_customer/active_customer_forms</config_path>
                                    <sort_order>30</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </active_customer_forms>
                                <active_address_fields_create_account translate="label,comment">
                                    <label>Ativar campos de endereço em /customer/account/create/</label>
                                    <comment><![CDATA[<a href="https://github.com/mozgbrasil/magento-customer-php56/blob/master/README.md#-ativar" target="_blank">__?__</a>]]></comment>
                                    <frontend_type>select</frontend_type>
                                    <source_model>adminhtml/system_config_source_yesno</source_model>
                                    <config_path>customer/mozg_customer/active_address_fields_create_account</config_path>
                                    <sort_order>40</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </active_address_fields_create_account>
                                <address_storage_format translate="label,comment">
                                    <label>Armazenamento do endereço</label>
                                    <comment><![CDATA[<a href="https://github.com/mozgbrasil/magento-customer-php56#-armazenamento-do-endereço" target="_blank">__?__</a>]]></comment>
                                    <frontend_type>select</frontend_type>
                                    <source_model>mozg_customer/system_config_source_addressStorageFormat</source_model>
                                    <config_path>customer/mozg_customer/address_storage_format</config_path>
                                    <sort_order>50</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </address_storage_format>
                            </fields>
                        </mozg_customer_required_settings>        
                     </fields>
                </mozg_customer>
            </groups>
        </customer>
    </sections>
</config>
